      return $q(function(resolve, reject) {
        $http.get('/academies/academy_belongs_to_user.json', { params: { user_id: $rootScope.user.id } })
          .then(function(response) {
            resolve(response.data);
          })
          .catch(function(errors) {
            reject(errors);
          });
      });
    },
  };
}]);

