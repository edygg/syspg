<form ng-submit="userSignUpCtrl.submitRegistration(userSignUpCtrl.newUser)">
  <md-input-container>
    <label>Email</label>
    <input ng-model="userSignUpCtrl.newUser.email" type="email">
  </md-input-container>
  <md-input-container>
    <label>Password</label>
    <input ng-model="userSignUpCtrl.newUser.password" type="password">
  </md-input-container>
  <md-input-container>
    <label>Password Confirmation</label>
    <input ng-model="userSignUpCtrl.newUser.password_confirmation" type="password">
  </md-input-container>
  <md-button class="md-accent md-raised" type="submit">Registrar</md-button>
</form>
